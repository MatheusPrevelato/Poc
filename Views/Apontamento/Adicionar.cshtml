@using Poc1.Entidades
@model ApontamentoViewModel

@{
    ViewData["Title"] = "Inserir Apontamentos";
}

<div class="text">

    <h1 class="display-4">Inserir Apontamento</h1>

</div>

<br />

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<form asp-controller="Apontamento" asp-action="Adicionar" method="post" class="style">
    
    <div class="form-group">
        <label for="nome">Data</label>
        <input type="date" asp-for="@Model.Data" class="form-control" dateFormat="mm-dd-yyyy">
        @Html.ValidationMessageFor(x => x.Data)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Stream</label>
        <select asp-for="@Model.StreamId" asp-items="@ViewBag.Streams" class="form-control"></select>
        @Html.ValidationMessageFor(x => x.StreamId)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Atividade</label>
        <select asp-for="@Model.AtividadeId" asp-items="@ViewBag.Atividades" class="form-control"></select>
        @Html.ValidationMessageFor(x => x.AtividadeId)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Fase</label>
        <select asp-for="@Model.FaseId" asp-items="@ViewBag.Fases" class="form-control"></select>
        @Html.ValidationMessageFor(x => x.FaseId)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Horas</label>
        <select asp-for="@Model.Horas" asp-items="@ViewBag.Horas" class="form-control"></select>
        @Html.ValidationMessageFor(x => x.Horas)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Observações</label>
        <textarea asp-for="@Model.Observacoes" class="form-control" placeholder="50-300 caracteres">Observações</textarea>
        @Html.ValidationMessageFor(x=> x.Observacoes)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
</form>